                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label for="workDescription" class="form-label">Tell us more about your work experience</label>
                <textarea class="form-control" id="workDescription" rows="4" placeholder="Your description here..."></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    
    <script>
        function toggleEndDate() {
            const currentlyEmployedCheckbox = document.getElementById('currentlyEmployed');
            const endMonth = document.getElementById('endMonth');
            const endYear = document.getElementById('endYear');
    
            if (currentlyEmployedCheckbox.checked) {
                endMonth.disabled = true;
                endYear.disabled = true;
                endMonth.value = ''; // Clear the selected value
                endYear.value = '';  // Clear the selected value
            } else {
                endMonth.disabled = false;
                endYear.disabled = false;
            }
        }
    </script>
    
    
