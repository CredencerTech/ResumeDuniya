    <div id="skills" class="content-section container mt-4">
        <h2 class="text-center mb-4">What are your stand-out skills?</h2>
        <div class="mb-3">
            <label for="skillInput" class="form-label">Type your skill and hit enter or comma to separate skills</label>
            <input type="text" class="form-control" id="skillInput" placeholder="Eg. HTML" onkeypress="addSkill(event)">
        </div>
        <ul id="skillsList" class="list-group mb-3"></ul>
        <button class="btn btn-primary" onclick="clearSkills()">Clear Skills</button>
    </div>
    
    <script>
        const skillsList = [];
    
        function addSkill(event) {
            if (event.key === 'Enter' || event.key === ',') {
                event.preventDefault(); // Prevent form submission
                const skillInput = document.getElementById('skillInput');
                const skill = skillInput.value.trim();
    
                if (skill && !skillsList.includes(skill)) {
                    skillsList.push(skill);
                    updateSkillsList();
                    skillInput.value = ''; // Clear input
                }
            }
        }
    
        function updateSkillsList() {
            const skillsListElement = document.getElementById('skillsList');
            skillsListElement.innerHTML = ''; // Clear existing list
    
            skillsList.forEach((skill, index) => {
                const listItem = document.createElement('li');
                listItem.className = 'list-group-item d-flex justify-content-between align-items-center';
                listItem.textContent = skill;
    
                const deleteButton = document.createElement('button');
                deleteButton.className = 'btn btn-danger btn-sm';
                deleteButton.textContent = 'Delete';
                deleteButton.onclick = () => deleteSkill(index);
    
                listItem.appendChild(deleteButton);
                skillsListElement.appendChild(listItem);
            });
        }
    
        function deleteSkill(index) {
            skillsList.splice(index, 1); // Remove skill from array
            updateSkillsList(); // Update displayed list
        }
    
        function clearSkills() {
            skillsList.length = 0; // Clear the skills array
            updateSkillsList(); // Update displayed list
        }
    </script>
    

    <div id="customSection" class="content-section">
        <h2>Custom Section</h2>
        <p>Details about your custom section go here...</p>
    </div>

    <div id="summary" class="content-section container mt-4">
        <h2 class="text-center mb-4">Finally, letâ€™s work on your summary</h2>
        <div class="mb-3">
            <label for="summaryInput" class="form-label">Briefly tell us about your background</label>
            <textarea class="form-control" id="summaryInput" rows="4" placeholder="Enter your summary here..."></textarea>
        </div>
        <button type="button" id="generateBtn" class="btn btn-primary mt-4">Generate .txt File</button>    </div>
    
    
        <script>
            document.getElementById('generateBtn').addEventListener('click', function() {
                const name = document.getElementById('name');
                const email = document.getElementById('email');
                const phone = document.getElementById('phone');
                const company = document.getElementById('company');
                const city = document.getElementById('city');
                const jobRole = document.getElementById('jobRole');
                const employmentStatus = document.getElementById('employmentStatus');
                const startDate = document.getElementById('startDate');
                const endDate = document.getElementById('endDate');
                const description = document.getElementById('description');
    
                // Check if all elements are found
                if (!name || !email || !phone || !company || !city || !jobRole || !employmentStatus || !startDate || !endDate || !description) {
                    console.error("One or more elements are missing");
                    return;
                }
    
                const summary = `
                    Name: ${name.value}
                    Email: ${email.value}
                    Phone: ${phone.value}
                    
                    Work Experience:
                    Company: ${company.value}
                    City: ${city.value}
                    Job Role: ${jobRole.value}
                    Employment Status: ${employmentStatus.value}
                    Start Date: ${startDate.value}
                    End Date: ${endDate.value}
                    Description: ${description.value}
                `;
    
                // Send the summary to the server to generate a .txt file
                fetch('/generate-txt', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ summary })
                })
                .then(response => response.blob())
                .then(blob => {
                    const url = window.URL.createObjectURL(blob);
                    const a = document.createElement('a');
                    a.href = url;
                    a.download = 'resume.txt';
                    document.body.appendChild(a);
                    a.click();
                    a.remove();
                })
                .catch(error => console.error('Error:', error));
            });
        </script>

    <!-- Navigation Buttons -->
    <div class="button-container">
        <button id="prevBtn" onclick="moveProgress(currentStep - 1)">Previous</button>
        <button id="nextBtn" onclick="moveProgress(currentStep + 1)">Next</button>
    </div>

    <script>
        let currentStep = 1; // Track the current step
    
        // JavaScript to handle progress bar movement
        function moveProgress(stepNumber) {
            // Get all progress steps
            const steps = document.querySelectorAll('.progress-step');
            const sections = {
                1: document.getElementById('contactDetails'),
                2: document.getElementById('workExperience'),
                3: document.getElementById('education'),
                4: document.getElementById('skills'),
                5: document.getElementById('customSection'),
                6: document.getElementById('summary')
            };
    
            // Validate step number
            if (stepNumber < 1 || stepNumber > steps.length) return;
    
            // Update current step
            currentStep = stepNumber;
    
            // Remove active class from all steps
            steps.forEach((step, index) => {
                if (index < currentStep) {
                    step.classList.add('active');  // Mark steps as active till the current one
                } else {
                    step.classList.remove('active');  // Remove active from future steps
                }
            });
    
            // Hide all sections
            Object.values(sections).forEach(section => section.style.display = 'none');
    
            // Show the current section
            sections[currentStep].style.display = 'block';
    
            // Manage button visibility
            document.getElementById('prevBtn').style.display = currentStep === 1 ? 'none' : 'inline-block';
            document.getElementById('nextBtn').style.display = currentStep === steps.length ? 'none' : 'inline-block';
        }
    
        // Initial setup
        moveProgress(1); // Call on load to set up the initial view
    </script>
    
